<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ningf.ourpetstore.persistence.ProductMapper">

    <resultMap id="BaseResultMap" type="org.ningf.ourpetstore.entity.Product">
            <id property="productId" column="productid" jdbcType="VARCHAR"/>
            <result property="categoryId" column="category" jdbcType="VARCHAR"/>
            <result property="productName" column="name" jdbcType="VARCHAR"/>
            <result property="description" column="descn" jdbcType="VARCHAR"/>
            <result property="isavailable" column="isAvailable" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        productid,category,name,
        descn,isAvailable
    </sql>
</mapper>
